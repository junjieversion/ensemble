#main-header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 15px 0;

    border-bottom: 1px solid #676767;
}

h1 {
    font-weight: 300;
    margin: 0;

    a {
        color: inherit;
        border-bottom: 0;
        background-color: #f5e14a;
        line-height: 1.5;
        display: inline-block;
        padding: 0 10px;

        &:hover {
            border-bottom: 0;
        }
    }
}

#main-navigation {
    ul {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
    }

    li {
        margin: 0 15px;

        &:last-child {
            margin-right: 0;
        }

        a {
            border-bottom: none;
            color: #000;
            font-size: 1.1rem;
            font-weight: 200;
        }
    }
}
